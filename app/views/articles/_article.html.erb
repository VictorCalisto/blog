<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= article.body %>
  </p>

  <p>
    <strong>Publication date:</strong>
    <%= article.publication_date %>
  </p>

<% if article.edit_date.present? %>
  <p>
    <strong>Edit date:</strong>
    <%= article.edit_date %>
  </p>
<% end %>


</div>
